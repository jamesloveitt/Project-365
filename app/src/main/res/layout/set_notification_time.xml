<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="mobiledev.unb.ca.project365.SetNotification"
    android:background="#dfe0d0"
    android:orientation="vertical"
    android:clickable="true"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:background="#000000"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:padding="0dp"
        android:touchscreenBlocksFocus="false" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="clock"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:theme="@style/Base.Theme.AppCompat.Light"
        android:gravity="center"/>


    <Button
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Set Notification"
        android:id="@+id/btnSetNotification"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

    <Button
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Cancel Notifications"
        android:id="@+id/btnRemoveNotificaiton"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

</LinearLayout>